<h1>Invitations</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>E-mail</th>
      <th>Delete invitation</th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |invitation|}}
    <tr>
      <td>{{invitation.id}}</td>
      <td>{{invitation.email}}</td>
      <td><button class="btn btn-danger btn-xs" {{action 'deleteIvitation' invitation}}>Delete</button></td>
    </tr>
  {{/each}}
  </tbody>
</table>