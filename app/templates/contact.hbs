<div class="jumbotron text-center">
  <h1>Contact Page</h1>

  <br/><br/>

  <p>Please, don't shy to send us your messages</p>

  <div class="form-horizontal form-group form-group-lg row">
    <div class="col-xs-10 col-xs-offset-1 ">
      {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
    </div>

    <div class="col-xs-10 col-xs-offset-1 ">
      {{textarea class="form-control" value=message placeholder="Your message. (At least 5 characters.)" rows="7" }}
    </div>

    <div class="col-xs-10 col-xs-offset-1  col-sm-4 col-md-3">
        <button class="btn btn-primary btn-lg btn-block" disabled={{isDisabled}} {{action 'saveContact'}}>Send message</button>
    </div>
  </div>

  {{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
  {{/if}}

  <br/><br/>
</div>
